

def A(n):
	def helper_facto(n):
		print("helper_facto: ", n)
		if n == 1:
			return 1
		else:
			return n*helper_facto(n-1)
	def C(i):
		print("C: ", i)
		a = 1
		b = 0
		while a <= i:
			print("new loop")
			b = b + helper_facto(a)
			a = a + 1
		return b
	a = 0
	a = n
	print("A: ",a)
	print(a+1,a+2)
	return C(a)+C(a+1)+C(a+2)


print("test pour n = 4: ", A(4))

